{
    "compilerOptions": {
        "target": "es6",
        "module": "commonJS",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "typeRoots": ["node_modules/@types", "src/typings"],
        "isolatedModules": true
    },
    "include": [
        "./src/**/*"
    ]
}